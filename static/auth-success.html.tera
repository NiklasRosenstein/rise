<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if success %}Authentication Successful{% else %}Authentication Failed{% endif %} - Rise</title>
    <link rel="stylesheet" href="/css/pico.min.css">
    <link rel="stylesheet" href="/css/app.css">
    <style>
        #status-card {
            max-width: 500px;
            margin: 2rem auto;
            text-align: center;
        }
        .status-icon {
            font-size: 4rem;
            margin: 1rem 0;
        }
        .success-icon {
            color: var(--ins-color);
        }
        .error-icon {
            color: var(--del-color);
        }
        .project-name {
            font-family: monospace;
            background: var(--code-background-color);
            padding: 0.125rem 0.375rem;
            border-radius: 0.25rem;
        }
        .countdown {
            font-weight: bold;
            color: var(--primary);
        }
        .redirect-url {
            font-size: 0.875rem;
            color: var(--muted-color);
            word-break: break-all;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <main class="container">
        <article id="status-card">
            {% if success %}
            <header>
                <div class="status-icon success-icon">✓</div>
                <h2>Authentication Successful</h2>
            </header>
            <section>
                <p>
                    You have been successfully authenticated for project
                    <strong class="project-name">{{ project_name }}</strong>.
                </p>
                <p>
                    Redirecting in <span class="countdown" id="countdown">3</span> seconds...
                </p>
                {% if redirect_url %}
                <p class="redirect-url">
                    <small>Redirecting to: <code>{{ redirect_url }}</code></small>
                </p>
                {% endif %}
                <progress id="redirect-progress" value="0" max="3"></progress>
                <p>
                    <a href="{{ redirect_url }}">Click here if not redirected automatically</a>
                </p>
            </section>
            {% else %}
            <header>
                <div class="status-icon error-icon">✗</div>
                <h2>Authentication Failed</h2>
            </header>
            <section>
                <p>
                    Failed to authenticate for project
                    <strong class="project-name">{{ project_name }}</strong>.
                </p>
                {% if error_message %}
                <p>
                    <mark>{{ error_message }}</mark>
                </p>
                {% endif %}
                <a href="/auth/signin?project={{ project_name }}{% if redirect_url %}&redirect={{ redirect_url | urlencode }}{% endif %}" role="button">Try Again</a>
            </section>
            {% endif %}
        </article>
    </main>

    {% if success %}
    <script>
        // Auto-redirect countdown
        let secondsLeft = 3;
        const countdownElement = document.getElementById('countdown');
        const progressElement = document.getElementById('redirect-progress');
        const redirectUrl = "{{ redirect_url }}";

        const intervalId = setInterval(() => {
            secondsLeft--;
            countdownElement.textContent = secondsLeft;
            progressElement.value = 3 - secondsLeft;

            if (secondsLeft <= 0) {
                clearInterval(intervalId);
                window.location.href = redirectUrl;
            }
        }, 1000);
    </script>
    {% endif %}
</body>
</html>
