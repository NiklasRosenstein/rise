<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rise Dashboard</title>
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
    <link rel="stylesheet" href="/css/app.css">
</head>
<body class="bg-gray-50 dark:bg-gray-950 text-gray-900 dark:text-gray-100 min-h-screen">
    <div id="root"></div>

    <script>
        // Configuration injected from backend
        window.CONFIG = {{ config | safe }};
    </script>

    <!-- React and ReactDOM from CDN -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <!-- Babel Standalone for JSX transformation -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <!-- Marked.js for markdown rendering (pinned version with SRI) -->
    <script src="https://cdn.jsdelivr.net/npm/marked@9.1.6/marked.min.js"
            integrity="sha384-odPBjvtXVM/5hOYIr3A1dB+flh0c3wAT3bSesIOqEGmyUA4JoKf/YTWy0XKOYAY7"
            crossorigin="anonymous"></script>

    <!-- API and Auth utilities (plain JS) -->
    <script src="/js/auth.js"></script>
    <script src="/js/api.js"></script>

    <!-- Utility functions and helpers (JSX) -->
    <script type="text/babel" src="/js/utils.js"></script>

    <!-- Reusable UI components (JSX) -->
    <script type="text/babel" src="/js/components/ui.js"></script>
    <script type="text/babel" src="/js/components/toast.js"></script>

    <!-- Feature components (JSX) -->
    <script type="text/babel" src="/js/components/extension-ui.js"></script>
    <script type="text/babel" src="/js/components/projects.js"></script>
    <script type="text/babel" src="/js/components/teams.js"></script>
    <script type="text/babel" src="/js/components/deployments.js"></script>
    <script type="text/babel" src="/js/components/resources.js"></script>

    <!-- Main App router (JSX) -->
    <script type="text/babel" src="/js/app.js"></script>
</body>
</html>
